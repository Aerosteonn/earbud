<% include ../views/partials/head %>

<div class="container">
   <div class="row">
      <div class="col-md-4 col-md-offset-4">
         <div class="login-panel panel panel-default">
            <div class="panel-heading">
               <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
               <form method="post" action="/signin">
                  <% if(typeof(errorMessage) !== 'undefined') {%>
                  <span><%= errorMessage %></span>
                  <% } %>
                  <fieldset>
                     <div class="form-group">
                        <input class="form-control" placeholder="Username" name="username" type="username"
                               id="username" required="true" autofocus>
                     </div>
                     <div class="form-group">
                        <input class="form-control" placeholder="Password" name="password" type="password"
                               id="password" required="true" value="">
                     </div>
                     <div class="checkbox">
                        <label>
                           <input name="remember" type="checkbox" value="Remember Me">Remember Me
                        </label>
                     </div>
                     <div class="button">
                        <input type="submit" name="signin" id="signin" value="sign in" class="btn btn-lg btn-success btn-block"/>
                     </div>
                      <br>
                     <div class="button">
                        <!-- Change this to a button or input when using this as a form -->
                         <a href="/signup" class="btn btn-lg btn-danger btn-block">Register</a>
                     </div>
                  </fieldset>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>

<% include ../views/partials/end %>